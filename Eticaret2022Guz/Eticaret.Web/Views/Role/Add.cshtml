@{
    ViewData["Title"] = "Role Ekle";
}
@model Role

<h1> Role Ekleme </h1>
<br />
<div class="row">

    <form asp-action="Add" asp-controller="Role" method="post">
        <div class="form-group">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" type="text" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RoleDescription"></label>
            <input asp-for="RoleDescription" type="text" class="form-control" />
            <span asp-validation-for="RoleDescription" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" class="btn-primary" value="Ekle" />
        </div>
    </form>
</div>