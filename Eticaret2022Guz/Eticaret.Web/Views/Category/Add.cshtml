@{
    ViewData["Title"] = "Kategori Ekle";
}
@model Category

<h1> Kategori Ekleme </h1>
<br />
<div class="row">

    <form asp-action="Add" asp-controller="Category" method="post">
        <div class="form-group">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" type="text" class="form-control"/>
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SortKey"></label>
            <input asp-for="SortKey" type="text" class="form-control" />
            <span asp-validation-for="SortKey" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" class="btn-primary" value="Ekle"/>
        </div>
    </form>
</div>