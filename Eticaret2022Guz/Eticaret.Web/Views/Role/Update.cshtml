@{
    ViewData["Title"] = "Role Güncelleme";
}
@model Role

<h1> Role Güncelleme </h1>
<br />
<div class="row">

    <form asp-action="Update" asp-controller="Role" method="post">
        <input type="hidden" asp-for="RoleId" />
        <input type="hidden" asp-for="RoleStatu" />
        <div class="form-group">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" type="text" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RoleDescription"></label>
            <input asp-for="RoleDescription" type="text" class="form-control" />
            <span asp-validation-for="RoleDescription" class="text-danger"></span>
        </div>
